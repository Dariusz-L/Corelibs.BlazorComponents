            new TreeNode
            {
                LayoutType = LayoutType.Grid,
                Identity = new IdentityVM("CharactersID", "Characters"),
                GetContent = GetProperty("Characters", "Characters"),
                Children = Enumerable.Range(97, 23).Select(i => new TreeNode
                {
                    CanExpand = false,
                    GetContent = GetProperty("", ((char) i).ToString()),
                    Data = new StyleVM()
                    {
                        BackgroundColor = new()
                        {
                            DefaultColor = Color.Gray
                        }
                    },
                })
                .ToList(),
                Data = new StyleVM()
                {
