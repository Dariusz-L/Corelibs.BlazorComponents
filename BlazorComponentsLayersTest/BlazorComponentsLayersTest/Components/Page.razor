                    },
                }
            },

            new TreeNode
            {
                LayoutType = LayoutType.Grid,
                Data = new StyleVM()
                {
                    BackgroundColor = new()
                    {
                        DefaultColor = BackgroundColor
                    }
                },
                Identity = new IdentityVM("WordsID", "Words"),
                GetContent = GetProperty("Words", "Words"),
                Children = new List<TreeNode>
                {
                    new TreeNode
                    {
                        CanExpand = false,
                        GetContent = GetProperty("Lesson", "Word"),
                        Data = new StyleVM()
                        {
                            BackgroundColor = new()
                            {
                                DefaultColor = Color.Aqua
                            }
                        }
                    },
                    new TreeNode
                    {
                        CanExpand = false,
                        GetContent = GetProperty("Lesson", "Word"),
                        Data = new StyleVM()
                        {
                            BackgroundColor = new()
