                Font = new()
                {
                    FontSize = 16,
                }
            },
            new()
            {
                Text = "Misa Ammo",
                Font = new()
                {
                    FontSize = 24,
                }
            }
        }
    };
    private readonly static Color BackgroundColor = Color.FromArgb(255, 225, 228, 228);
    public static TreeNode? Tree = new()
    {
        CanExpand = false,
        IsExpanded = true,
        Children = new List<TreeNode>
        {
            new TreeNode
            {
                Data = new StyleVM()
                {
                    Font = new()
                    {
                        FontSize = 20
                    },
                    BackgroundColor = new()
                    {
                        DefaultColor = BackgroundColor
                    }
                },
                Identity = new IdentityVM("LessonsID", "Lessons"),
                GetContent = GetProperty("Lessons"),
                Children = new List<TreeNode>
                {
                    new TreeNode
                    {
                        GetContent = GetProperty("Lesson", "wa nad ga particles"),
                        Children = new List<TreeNode>
                        {
                        }
                    },
                    new TreeNode
                    {
                        GetContent = GetProperty("Lesson", "tara and nara"),
                        Children = new List<TreeNode>
                        {
                        }
                    },
                    new TreeNode
                    {
                        GetContent = GetProperty("Lesson", "Basic expressions"),
                        Children = new List<TreeNode>
                        {
